<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yxx.recording">

    <application
        android:allowBackup="true"
        android:icon="@drawable/chaiquan2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chaiquan2"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ReadActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".WriteActivity"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".WeclomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PwdLoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".RegisterLoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>